<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>UFO Sightings</title>

    <!-- CSS only -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3"
      crossorigin="anonymous"
    />
    <link href="/styles.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('navbar'); -%>

    <div class="container mt-2">
      <div class="row">
        <div class="col-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2">
          <img
            src="https://images-wixmp-ed30a86b8c4ca887773594c2.wixmp.com/f/f6b92df9-04a3-4744-b26f-d82865a44f85/da2xerj-bd997cb9-1134-439e-8e49-e5dc42296e19.png?token=eyJ0eXAiOiJKV1QiLCJhbGciOiJIUzI1NiJ9..4VjqTXbULZd1_M5NXjFJFpm7yefdHq-GRDmLD55qFic"
            class="img-fluid"
          />
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <table class="table table-sm">
            <thead>
              <tr>
                <th>#</th>
                <th>Date</th>
                <th>Shape</th>
                <th>City</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% for (let i=0; i < sightings.length; i += 1) { %>
              <tr>
                <td><%= i %></td>
                <td><%= sightings[i]['date_time'] %></td>
                <td><%= sightings[i]['shape'] %></td>
                <td><%= sightings[i]['city'] %></td>
                <td>
                  <a href="/sighting/<%= i %>" class="btn btn-primary">View</a>
                </td>
              </tr>
              <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <!-- JavaScript Bundle with Popper -->
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
      crossorigin="anonymous"
    ></script>
  </body>
</html>
